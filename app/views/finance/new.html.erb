<div class="card">
  <div class="card-header">
    <h4>Create Finance</h4>
  </div>
  <div class="card-body">


    <%= form_for :finance do |f| %>

      <div class="card-body">
        <div class="card-body">
          <div class="field form-group">
            <%= f.label :name %>
            <%= f.text_field :name,autofocus: true, class:"form-control", placeholder: 'Type' %>
            <div class="field">
              <br>
              <%= f.label 'Income' %>
              <%= f.check_box :incomeOrExpence, placeholder: 'Income' %>
            </div>
            <%= f.label 'List of person' %>
            <%#= f.collection_select(:id, current_user.person.order(:first_name),:id,:first_name, {:prompt => nil,:multiple => true}, {class:'btn btn-light dropdown-toggle'})%>
            <%= f.collection_check_boxes(:id, current_user.person.order(:first_name),:id,:first_name)%>
            <br>


          </div>

          <%= f.submit "Create finance", class: 'btn btn-secondary'%>
        </div>
      </div>
    <% end %>

  </div>
</div>


