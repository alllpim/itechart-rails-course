<h1>Finances</h1>
<br>
<%= link_to 'New Finance', new_finance_path, class:'btn btn-primary' %>
<br>
<br>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>

    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @finance.each do |finance| %>
    <tr>
      <td><%= finance.name %></td>
      <td><%#= link_to 'Show', person %></td>
      <td><%= link_to 'Edit', edit_finance_path(finance), class:'btn btn-secondary' %></td>
      <td><%= link_to 'Show info', finance_info_path(finance), class: 'btn btn-secondary' %></td>
      <td><%= link_to 'Delete', finance_path(finance), method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>


    </tr>
  <% end %>
  </tbody>
</table>

<br>


