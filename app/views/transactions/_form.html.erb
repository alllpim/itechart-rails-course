<div class="card">
<div class="card-body">

    <%= form_with(model: transaction) do |form| %>
      <% if transaction.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

          <ul>
            <% transaction.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="card-body">
        <div class="card-body">
          <div class="field form-group">
            <%= form.label 'Choose the Person and category' %>
            <%= form.collection_select(:persons_finance_id, PersonsFinance.where(person_id: current_user.person), :id, :show_title) %>
          </div>
          <div class="field form-group">
            <%= form.label 'Amount' %>
            <%= form.text_field :amount, placeholder: 'Enter the amount' %>
          </div>
          <div class="field form-group">
            <%= form.label 'Is important?' %>
            <%= form.check_box :is_important %>
          </div>
          <%= form.submit "Create transaction", class: 'btn btn-secondary'%>
        </div>
      </div>
    <% end %>
</div>
  </div>