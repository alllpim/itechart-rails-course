<div class="card">
  <div class="card-header">
    <h4>Create Person</h4>
  </div>
  <div class="card-body">


    <%= form_for :person do |f| %>

      <div class="card-body">
        <div class="card-body">
          <div class="field form-group">
            <%= f.label :type_name %>
            <%= f.text_field :type_name,autofocus: true, class:"form-control", placeholder: 'Type' %>
          </div>
          <div class="field form-group">
            <%= f.label :first_name %>
            <%= f.text_field :first_name,autofocus: true, class:"form-control", placeholder: 'First name' %>
          </div>
          <div class="field form-group">
            <%= f.label :last_name %>
            <%= f.text_field :last_name,autofocus: true, class:"form-control", placeholder: 'Last name' %>
          </div>
          <%= f.submit "Create person", class: 'btn btn-secondary'%>
        </div>
      </div>
    <% end %>

  </div>
</div>


