<p id="notice"><%= notice %></p>

<h1>People</h1>
<br>
<%= link_to 'New Person', new_person_path, class:'btn btn-primary' %>
<br>
<br>
<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.type_name %></td>
        <td><%#= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person), class:'btn btn-secondary' %></td>
        <td><%#= link_to 'Add finance category', new_finance_path(person) %></td>
        <td><%= link_to 'Show Finances', people_persons_finances_path(person), class:'btn btn-secondary'%></td>
        <td><%= link_to 'Delete', person_path(person), method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>


