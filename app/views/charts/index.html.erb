<%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
<div class="card-header">
  <h3>Chart</h3>
  <%= form_for :cash_transaction do |f| %>
    <div>
      <p> From:<%= f.date_field :start_date, value: @start_date %>
        To:
        <%= f.date_field :end_date, value: @end_date.to_date %></p>
    </div>
    <div>
      <%= f.submit "Search", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
<div class="chart-box">
  <div class="chart">
    <h2>Income chart</h2>
    <%=pie_chart  @income_chart, width: '400px' %>
  </div>
  <div class="chart">
    <h2>Expense chart</h2>
    <%=pie_chart  @expence_chart, width: '400px' %>
  </div>

</div>
<div>
  <h2>Finances</h2>
  <% @finances.each do |finance| %>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">
        <%=finance.name + ' ['+finance.show_income_or_expence+']'%>
        </h5>
          <p>Total amount: N/A</p>
        </div>
      </div>
  <% end %>
    </div>

